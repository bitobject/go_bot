# Example environment variables for goooo project

# PostgreSQL connection (host must match docker-compose service name)
DB_HOST=goooo_postgres
DB_PORT=5432
DB_USER=goooo_user
DB_PASSWORD=goooo_password
DB_NAME=goooo

# Telegram
TELEGRAM_TOKEN=replace_me

# JWT
JWT_SECRET_KEY=replace_me_with_very_long_secret
JWT_EXPIRES_IN_HOURS=24

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# App
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=info
